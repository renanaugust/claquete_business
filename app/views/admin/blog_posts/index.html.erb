<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-body">
        <br>
        <%= link_to "Adicionar", new_admin_blog_post_path, class: "btn btn-success text-center btn-new" %>
        <br>
        <br>
        <br>
        <div class="table-responsive class=" col-md-12">
          <table class="table table-striped table-hovers">
            <thead>
              <tr>
                <th>Título</th>
                <th>Conteúdo</th>
                <th>Imagem</th>
                <th class="col-md-3 text-center">Opções</th>
              </tr>
            </thead>
            <tbody>
              <% @blog_posts.each do |blog_post| %>
              <tr>
                <td class="title-table" width="30%">
                  <%= blog_post.title %>
                </td>
                <td class="content-table" width="50%">
                  <%= blog_post.content %>
                </td>
                <td>
                  <%= image_tag blog_post.image.variant(resize: "200x200") %>
                </td>
                <td class="text-center">
                  <%= link_to edit_admin_blog_post_path(blog_post.id), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                  <% end %>

                  <%= link_to admin_blog_post_path(blog_post.id), method: :delete,
                    class: "btn btn-danger btn-circle",
                    data: { confirm: "Deseja realmente deletar o Post com ID: #{blog_post.id}?", item: blog_post.title } do %>
                  <i class="fa fa-times"></i>
                </td>
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>